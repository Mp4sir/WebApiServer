//Hoseok(Alex) Lee
//The basic HTML code to be able to display values on to the web
//It uses refresh (on line 32) to update the data - but I'm sure there are much better ways than that

<!DOCTYPE html>
<html>
<head>
    <title>Thermal Chamber</title>
</head>
<body>
        <Center><h1><font face="verdana" color="#696969">Thermal Chamber</font></h1></Center>
        <Center><ul style="list-style-type:none" id="sensors" /></Center>
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.0.3.min.js"></script>
    <script>
    var uri = 'sensors/retrieve';

    $(document).ready(function () {
      // Send an AJAX request
      $.getJSON(uri)
          .done(function (data) {
            // On success, 'data' contains a list of sensors.
            $.each(data, function (key, item) {
              // Add a list item for the product.
              $('<li>',{ text: formatItem(item) }).appendTo($('#sensors'));
            });
          });
    });

    function formatItem(item) {
        return item.Id + ": " + item.Temperature + "C";
        }
        setTimeout("window.location.reload();", 1000);
    </script>
</body>
</html>
